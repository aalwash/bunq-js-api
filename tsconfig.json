{
  "compilerOptions": {

    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES5",
    "lib": ["es2015", "dom"],
    "noEmit": false,
    "allowJs": false,

    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": false,
    "declaration": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources":true,
    "preserveConstEnums": false

  },
  "include": [
    "./",
    "./src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}